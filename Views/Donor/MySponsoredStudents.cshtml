@model IEnumerable<StudentCharityHub.Models.Student>
@{
    ViewData["Title"] = "My Sponsored Students";
}

<div class="container">
    <h1 class="mb-4">My Sponsored Students</h1>
    <div class="row">
        @if (Model.Any())
        {
            foreach (var student in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(student.PhotoUrl))
                        {
                            <img src="@student.PhotoUrl" class="card-img-top" alt="@student.FullName"
                                 style="height: 220px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@student.FullName</h5>
                            <p class="card-text"><i class="bi bi-geo-alt"></i> @student.Location</p>
                            <p class="card-text"><strong>Goal:</strong> $@student.FundingGoal.ToString("F2")</p>
                            <p class="card-text"><strong>Raised:</strong> $@student.AmountRaised.ToString("F2")</p>
                            <div class="mt-auto">
                                <a asp-controller="Student" asp-action="Details" asp-route-id="@student.Id"
                                   class="btn btn-primary w-100 mb-2">View Profile</a>
                                <a asp-controller="Donation" asp-action="Create" asp-route-studentId="@student.Id"
                                   class="btn btn-outline-success w-100">Donate Again</a>
                                <a asp-controller="Messages" asp-action="Create" asp-route-studentId="@student.Id"
                                   class="btn btn-outline-secondary w-100 mt-2">Message Student</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    You haven't sponsored any students yet. <a asp-controller="Student" asp-action="Index">Browse students</a>
                    to start making an impact.
                </div>
            </div>
        }
    </div>
</div>

