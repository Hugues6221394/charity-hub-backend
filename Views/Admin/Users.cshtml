@model IEnumerable<dynamic>
@using StudentCharityHub.Models
@{
    ViewData["Title"] = "Manage Users";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Users</h1>
        <a asp-action="AddUser" class="btn btn-success">
            <i class="bi bi-person-plus"></i> Add User
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Roles</th>
                            <th>Status</th>
                            <th>Created</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            ApplicationUser user = item.User;
                            var roles = item.Roles as IEnumerable<string> ?? Enumerable.Empty<string>();
                            <tr>
                                <td>@user.FirstName @user.LastName</td>
                                <td>@user.Email</td>
                                <td>@user.PhoneNumber</td>
                                <td>
                                    @foreach (var role in roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>@user.CreatedAt.ToString("yyyy-MM-dd")</td>
                                <td class="text-end">
                                    <a asp-action="EditUser" asp-route-id="@user.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post"
                                          class="d-inline" onsubmit="return confirm('Deactivate this user?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-person-dash"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

