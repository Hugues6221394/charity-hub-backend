@using StudentCharityHub.Models
@using System.Security.Claims
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> UserManager
@{
    var userId = User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier);
    var user = await UserManager.FindByIdAsync(userId!);
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h2 mb-1 fw-bold text-primary">
                        <i class="bi bi-mortarboard-fill me-2"></i>Student Dashboard
                    </h1>
                    <p class="text-muted mb-0">Welcome back, @(user?.FirstName ?? "Student")!</p>
                </div>
                <div>
                    <a asp-controller="Account" asp-action="Manage" class="btn btn-outline-primary me-2">
                        <i class="bi bi-gear me-1"></i>Settings
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-primary text-white">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-white-50 mb-1">My Profile</h6>
                            <h3 class="mb-0">View</h3>
                        </div>
                        <i class="bi bi-person-circle fs-1 opacity-50"></i>
                    </div>
                    <a asp-controller="Student" asp-action="MyProfile" class="btn btn-light btn-sm mt-auto">
                        <i class="bi bi-arrow-right me-1"></i>Go to Profile
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-success text-white">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-white-50 mb-1">My Donors</h6>
                            <h3 class="mb-0">View</h3>
                        </div>
                        <i class="bi bi-people-fill fs-1 opacity-50"></i>
                    </div>
                    <a asp-controller="Student" asp-action="MyDonors" class="btn btn-light btn-sm mt-auto">
                        <i class="bi bi-arrow-right me-1"></i>View Donors
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-info text-white">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-white-50 mb-1">Messages</h6>
                            <h3 class="mb-0">Chat</h3>
                        </div>
                        <i class="bi bi-envelope-heart-fill fs-1 opacity-50"></i>
                    </div>
                    <a asp-controller="Messages" asp-action="Index" class="btn btn-light btn-sm mt-auto">
                        <i class="bi bi-arrow-right me-1"></i>View Messages
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 bg-gradient-warning text-white">
                <div class="card-body d-flex flex-column">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h6 class="text-white-50 mb-1">Contact Admin</h6>
                            <h3 class="mb-0">Help</h3>
                        </div>
                        <i class="bi bi-headset fs-1 opacity-50"></i>
                    </div>
                    <a asp-controller="Messages" asp-action="ContactAdmin" class="btn btn-light btn-sm mt-auto">
                        <i class="bi bi-arrow-right me-1"></i>Message Admin
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-lightning-charge-fill text-warning me-2"></i>Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="Student" asp-action="MyProfile" class="btn btn-outline-primary text-start">
                            <i class="bi bi-person-circle me-2"></i>View My Profile
                        </a>
                        <a asp-controller="Student" asp-action="MyDonors" class="btn btn-outline-success text-start">
                            <i class="bi bi-people-fill me-2"></i>View My Donors
                        </a>
                        <a asp-controller="Messages" asp-action="Index" class="btn btn-outline-info text-start">
                            <i class="bi bi-envelope-heart me-2"></i>View Messages
                        </a>
                        <a asp-controller="Messages" asp-action="ContactAdmin" class="btn btn-outline-warning text-start">
                            <i class="bi bi-headset me-2"></i>Message Admin
                        </a>
                        <a asp-controller="Notifications" asp-action="Index" class="btn btn-outline-secondary text-start">
                            <i class="bi bi-bell me-2"></i>View Notifications
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle-fill text-info me-2"></i>Information
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">
                        <i class="bi bi-check-circle-fill text-success me-2"></i>
                        As a student, you can view your profile, see who has donated to you, and communicate with donors and administrators.
                    </p>
                    <p class="text-muted mb-0">
                        <i class="bi bi-shield-check-fill text-primary me-2"></i>
                        All messages are moderated by administrators to ensure a safe environment.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .bg-gradient-success {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
    }
    .bg-gradient-info {
        background: linear-gradient(135deg, #3494E6 0%, #EC6EAD 100%);
    }
    .bg-gradient-warning {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }
</style>

