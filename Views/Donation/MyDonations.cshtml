@model IEnumerable<StudentCharityHub.Models.Donation>
@{
    ViewData["Title"] = "My Donations";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">My Donations</h1>
        <a asp-controller="Student" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-search"></i> Find Students
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Student</th>
                                <th>Amount</th>
                                <th>Method</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th>Receipt</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var donation in Model)
                            {
                                <tr>
                                    <td>@donation.Student?.FullName</td>
                                    <td>$@donation.Amount.ToString("F2")</td>
                                    <td>@donation.PaymentMethod</td>
                                    <td>
                                        <span class="badge @(donation.Status switch
                                        {
                                            "Completed" => "bg-success",
                                            "Pending" => "bg-warning text-dark",
                                            "Failed" => "bg-danger",
                                            "Cancelled" => "bg-secondary",
                                            _ => "bg-light text-dark"
                                        })">@donation.Status</span>
                                    </td>
                                    <td>@donation.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(donation.ReceiptUrl))
                                        {
                                            <a href="@donation.ReceiptUrl" target="_blank"
                                               class="btn btn-sm btn-outline-primary">
                                                View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">N/A</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-muted mb-0">You haven't made any donations yet.</p>
            }
        </div>
    </div>
</div>

