@model IEnumerable<Student>
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@{
    ViewData["Title"] = "Students";
    var isStudent = User.IsInRole("Student");
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Students Seeking Sponsorship</h1>
        @if (isStudent)
        {
            <div class="d-flex gap-2">
                <a asp-controller="Student" asp-action="MyDonors" class="btn btn-outline-success">
                    <i class="bi bi-people-fill me-1"></i>My Donors
                </a>
                <a asp-controller="Messages" asp-action="Index" class="btn btn-outline-info">
                    <i class="bi bi-envelope-heart me-1"></i>Messages
                </a>
                <a asp-controller="Messages" asp-action="ContactAdmin" class="btn btn-outline-warning">
                    <i class="bi bi-headset me-1"></i>Contact Admin
                </a>
            </div>
        }
    </div>
    <div class="row">
        @foreach (var student in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(student.PhotoUrl))
                    {
                        <img src="@student.PhotoUrl" class="card-img-top" alt="@student.FullName" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-secondary d-flex align-items-center justify-content-center" style="height: 250px;">
                            <i class="bi bi-person-circle text-white" style="font-size: 5rem;"></i>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title">@student.FullName</h5>
                        <p class="card-text"><i class="bi bi-geo-alt"></i> @student.Location</p>
                        <p class="card-text"><i class="bi bi-calendar"></i> Age: @student.Age</p>
                        @if (!string.IsNullOrEmpty(student.DreamCareer))
                        {
                            <p class="card-text"><i class="bi bi-briefcase"></i> @student.DreamCareer</p>
                        }
                        <div class="progress mb-3">
                            @{
                                var progress = student.FundingGoal > 0 ? (student.AmountRaised / student.FundingGoal) * 100 : 0;
                            }
                            <div class="progress-bar" role="progressbar" style="width: @(progress > 100 ? 100 : progress)%">
                                @Math.Round(progress, 1)%
                            </div>
                        </div>
                        <p class="text-muted small">
                            $@student.AmountRaised.ToString("F2") / $@student.FundingGoal.ToString("F2")
                        </p>
                        <a asp-action="Details" asp-route-id="@student.Id" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



