@model StudentCharityHub.Models.Student
@using StudentCharityHub.Models
@{
    ViewData["Title"] = "My Profile";
    var donations = ViewBag.Donations as List<Donation> ?? new();
    var followers = ViewBag.Followers as List<Follow> ?? new();
    decimal totalRaised = ViewBag.TotalRaised ?? 0m;
    var documents = ViewBag.Documents as List<Document> ?? new();
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">My Student Profile</h1>
        <a asp-controller="Messages" asp-action="ContactAdmin" class="btn btn-outline-secondary">
            <i class="bi bi-chat-dots"></i> Message Admin
        </a>
    </div>
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card">
                @if (!string.IsNullOrEmpty(Model.PhotoUrl))
                {
                    <img src="@Model.PhotoUrl" class="card-img-top" alt="@Model.FullName" />
                }
                <div class="card-body">
                    <h4>@Model.FullName</h4>
                    <p class="mb-1"><i class="bi bi-geo-alt"></i> @Model.Location</p>
                    <p class="mb-1"><i class="bi bi-calendar"></i> Age: @Model.Age</p>
                    @if (!string.IsNullOrEmpty(Model.DreamCareer))
                    {
                        <p><i class="bi bi-stars"></i> Dream Career: @Model.DreamCareer</p>
                    }
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-body">
                    <h6>Funding Progress</h6>
                    @{
                        var progress = Model.FundingGoal > 0 ? (totalRaised / Model.FundingGoal) * 100 : 0;
                    }
                    <div class="progress mb-2">
                        <div class="progress-bar" role="progressbar"
                             style="width: @(progress > 100 ? 100 : progress)%">
                            @progress.ToString("F1")%
                        </div>
                    </div>
                    <p class="mb-0">
                        <strong>$@totalRaised.ToString("F2")</strong> raised of
                        <strong>$@Model.FundingGoal.ToString("F2")</strong>
                    </p>
                    <div class="mt-3">
                        <a asp-action="MyDonors" class="btn btn-outline-primary w-100">
                            View My Donors
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-body">
                    <h5>Story</h5>
                    <p>@Model.Story</p>
                    @if (!string.IsNullOrEmpty(Model.AcademicBackground))
                    {
                        <h5 class="mt-4">Academic Background</h5>
                        <p>@Model.AcademicBackground</p>
                    }
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Donations</h5>
                    <span class="badge bg-primary">@donations.Count</span>
                </div>
                <div class="card-body">
                    @if (donations.Any())
                    {
                        <ul class="list-group">
                            @foreach (var donation in donations)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <strong>$@donation.Amount.ToString("F2")</strong>
                                        <span class="text-muted">(@donation.PaymentMethod)</span>
                                    </div>
                                    <small>@donation.CreatedAt.ToString("MMM dd, yyyy")</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="mb-0 text-muted">No donations yet.</p>
                    }
                </div>
            </div>
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Followers</h5>
                    <span class="badge bg-success">@followers.Count</span>
                </div>
                <div class="card-body">
                    @if (followers.Any())
                    {
                        <ul class="list-group">
                            @foreach (var follower in followers)
                            {
                                <li class="list-group-item">@follower.Donor?.Email</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="mb-0 text-muted">No followers yet.</p>
                    }
                </div>
            </div>
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Documents</h5>
                    <span class="badge bg-info">@documents.Count</span>
                </div>
                <div class="card-body">
                    @if (documents.Any())
                    {
                        <ul class="list-group">
                            @foreach (var doc in documents)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <a href="@doc.FilePath" target="_blank">
                                        <i class="bi bi-file-earmark"></i> @doc.FileName
                                    </a>
                                    <small class="text-muted">@doc.UploadedAt.ToString("MMM dd, yyyy")</small>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="mb-0 text-muted">No documents uploaded yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

