@model StudentCharityHub.ViewModels.SendMessageViewModel
@{
    ViewData["Title"] = "Message Admin";
    var student = ViewBag.Student as StudentCharityHub.Models.Student;
}

<div class="container">
    <h1 class="mb-4">Message Platform Admin</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (student != null)
            {
                <p class="text-muted">Sending as <strong>@student.FullName</strong></p>
            }

            <form asp-action="ContactAdmin" method="post">
                <input type="hidden" asp-for="StudentId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label"></label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Type your message to the admin..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <a asp-controller="Student" asp-action="MyProfile" class="btn btn-outline-secondary">Cancel</a>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

