@model StudentCharityHub.Models.Message
@using StudentCharityHub.Models
@using System.Security.Claims
@{
    ViewData["Title"] = "Message Details";
    var userId = User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier);
    var isSender = Model.SenderId == userId;
    var isReceiver = Model.ReceiverId == userId;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="bi bi-envelope-fill me-2"></i>Message Details
                        </h4>
                        <a asp-action="Index" class="btn btn-light btn-sm">
                            <i class="bi bi-arrow-left"></i> Back to Messages
                        </a>
                    </div>
                </div>
                <div class="card-body p-4">
                    <div class="message-header mb-4 pb-3 border-bottom">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-person-fill me-2"></i>From:
                                </h6>
                                <p class="mb-0 fw-bold">@(ViewBag.Sender?.Email ?? ViewBag.Sender?.FirstName + " " + ViewBag.Sender?.LastName ?? Model.SenderId)</p>
                            </div>
                            <div class="col-md-6 mb-3">
                                <h6 class="text-muted mb-1">
                                    <i class="bi bi-person-check-fill me-2"></i>To:
                                </h6>
                                <p class="mb-0 fw-bold">@(ViewBag.Receiver?.Email ?? ViewBag.Receiver?.FirstName + " " + ViewBag.Receiver?.LastName ?? Model.ReceiverId)</p>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <small class="text-muted">
                                    <i class="bi bi-calendar3 me-1"></i>
                                    Sent: @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                </small>
                            </div>
                            @if (Model.IsRead && Model.ReadAt.HasValue)
                            {
                                <div class="col-md-6">
                                    <small class="text-muted">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Read: @Model.ReadAt.Value.ToString("MMMM dd, yyyy 'at' hh:mm tt")
                                    </small>
                                </div>
                            }
                        </div>
                        @if (Model.StudentId > 0 && ViewBag.Student != null)
                        {
                            var student = ViewBag.Student as StudentCharityHub.Models.Student;
                            <div class="mt-3">
                                <span class="badge bg-info">
                                    <i class="bi bi-mortarboard me-1"></i>
                                    About: @student?.FullName
                                </span>
                            </div>
                        }
                    </div>

                    <div class="message-content mb-4">
                        <h6 class="text-muted mb-3">Message:</h6>
                        <div class="alert alert-light border p-4 rounded-3" style="background-color: #f8f9fa;">
                            <p class="mb-0" style="white-space: pre-wrap; line-height: 1.8;">@Model.Content</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.ModeratorNotes))
                    {
                        <div class="alert alert-warning mb-4">
                            <h6 class="mb-2">
                                <i class="bi bi-shield-check me-2"></i>Moderator Notes:
                            </h6>
                            <p class="mb-0">@Model.ModeratorNotes</p>
                        </div>
                    }

                    <div class="message-status mb-4">
                        <div class="d-flex gap-2 flex-wrap">
                            @if (Model.IsApproved)
                            {
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Approved
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-warning">
                                    <i class="bi bi-clock me-1"></i>Pending Approval
                                </span>
                            }
                            @if (Model.IsModerated)
                            {
                                <span class="badge bg-info">
                                    <i class="bi bi-shield-check me-1"></i>Moderated
                                </span>
                            }
                            @if (Model.IsRead && isReceiver)
                            {
                                <span class="badge bg-primary">
                                    <i class="bi bi-envelope-open me-1"></i>Read
                                </span>
                            }
                        </div>
                    </div>

                    <div class="message-actions mt-4 pt-3 border-top">
                        <div class="d-flex gap-2 flex-wrap">
                            @if (isReceiver)
                            {
                                <a asp-action="Reply" asp-route-messageId="@Model.Id" class="btn btn-primary">
                                    <i class="bi bi-reply me-2"></i>Reply
                                </a>
                            }
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Back to Messages
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    .message-content p {
        font-size: 1.05rem;
    }
</style>

